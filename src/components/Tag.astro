---
interface Props {
  name: string;
  size?: "sm" | "md";
}

const { name, size = "md" } = Astro.props;

const sizeClasses = {
  sm: "text-xs px-2 py-0.5",
  md: "text-sm px-3 py-1",
};
---

<a
  href={`/tags/${name.toLowerCase()}`}
  class:list={[
    "inline-block font-medium bg-gray-100 text-gray-700 rounded-full hover:bg-primary-100 hover:text-primary-700 transition-colors",
    sizeClasses[size],
  ]}
>
  {name}
</a>
