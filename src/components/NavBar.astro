---
import { siteConfig } from "../config/site";

const currentPath = Astro.url.pathname;
---

<nav class="hidden md:flex items-center gap-8">
  {
    siteConfig.nav.map((item) => (
      <a
        href={item.href}
        class:list={[
          "text-sm font-medium transition-colors",
          currentPath === item.href || (item.href !== "/" && currentPath.startsWith(item.href))
            ? "text-primary-600 dark:text-primary-400"
            : "text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100",
        ]}
      >
        {item.name}
      </a>
    ))
  }
</nav>

<!-- Mobile menu button -->
<button
  id="mobile-menu-btn"
  class="md:hidden p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100"
  aria-label="Toggle menu"
>
  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
  </svg>
</button>

<!-- Mobile menu -->
<div
  id="mobile-menu"
  class="hidden fixed inset-x-0 top-[65px] bottom-0 bg-white dark:bg-gray-900 z-[60] md:hidden shadow-lg overflow-y-auto"
>
  <nav class="flex flex-col p-4">
    {
      siteConfig.nav.map((item) => (
        <a
          href={item.href}
          class:list={[
            "py-3 px-4 text-lg font-medium border-b border-gray-100 dark:border-gray-800 transition-colors",
            currentPath === item.href || (item.href !== "/" && currentPath.startsWith(item.href))
              ? "text-primary-600 dark:text-primary-400"
              : "text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100",
          ]}
        >
          {item.name}
        </a>
      ))
    }
  </nav>
</div>

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");

  btn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });
</script>
