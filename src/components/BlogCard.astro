---
import { formatDate } from "../utils/formatDate";
import Tag from "./Tag.astro";

interface Props {
  title: string;
  description: string;
  date: Date;
  slug: string;
  tags?: string[];
}

const { title, description, date, slug, tags } = Astro.props;
---

<a
  href={`/blog/${slug}`}
  class="group block bg-white rounded-xl p-6 border border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300"
>
  <div class="flex items-center gap-4 text-sm text-gray-500 mb-3">
    <time datetime={date.toISOString()}>{formatDate(date)}</time>
  </div>
  <h3 class="text-xl font-semibold text-gray-900 group-hover:text-primary-600 transition-colors mb-2">
    {title}
  </h3>
  <p class="text-gray-600 mb-4 line-clamp-2">{description}</p>
  {tags && (
    <div class="flex flex-wrap gap-2">
      {tags.slice(0, 3).map((tag) => <Tag name={tag} size="sm" />)}
    </div>
  )}
</a>
