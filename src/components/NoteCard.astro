---
import { formatDate } from "../utils/formatDate";

interface Props {
  title: string;
  date: Date;
  slug: string;
  topic?: string;
}

const { title, date, slug, topic } = Astro.props;
---

<a
  href={`/notes/${slug}`}
  class="group block bg-white rounded-lg p-4 border border-gray-200 hover:border-primary-300 hover:shadow-md transition-all duration-300"
>
  <div class="flex items-center justify-between mb-2">
    <time datetime={date.toISOString()} class="text-sm text-gray-500">
      {formatDate(date)}
    </time>
    {topic && (
      <span class="text-xs font-medium text-primary-600 bg-primary-50 px-2 py-1 rounded">
        {topic}
      </span>
    )}
  </div>
  <h3 class="font-medium text-gray-900 group-hover:text-primary-600 transition-colors">
    {title}
  </h3>
</a>
