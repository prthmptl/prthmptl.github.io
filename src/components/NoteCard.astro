---
import { formatDate } from "../utils/formatDate";

interface Props {
  title: string;
  date: Date;
  slug: string;
  topic?: string;
}

const { title, date, slug, topic } = Astro.props;
---

<a
  href={`/notes/${slug}`}
  class="group block bg-white dark:bg-gray-800 rounded-lg p-4 border border-gray-200 dark:border-gray-700 hover:border-primary-300 dark:hover:border-primary-600 hover:shadow-md transition-all duration-300"
>
  <div class="flex items-center justify-between mb-2">
    <time datetime={date.toISOString()} class="text-sm text-gray-500 dark:text-gray-400">
      {formatDate(date)}
    </time>
    {topic && (
      <span class="text-xs font-medium text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900 px-2 py-1 rounded">
        {topic}
      </span>
    )}
  </div>
  <h3 class="font-medium text-gray-900 dark:text-gray-100 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
    {title}
  </h3>
</a>
