---
import BaseLayout from "../layouts/BaseLayout.astro";
import { siteConfig } from "../config/site";

const skills = [
  { category: "Languages", items: ["Java", "Python", "C/C++"] },
  { category: "Frameworks", items: ["LangChain", "Streamlit", "Flask", "FastAPI", "Ultralytics"] },
  { category: "Developer Tools", items: ["Git", "AWS", "VS Code", "Hugging Face", "MongoDB", "Docker", "K9S", "Grafana", "Postman"] },
  { category: "Libraries", items: ["PySpark", "Pandas", "NumPy", "PyTorch", "TensorFlow", "Keras", "Scikit-learn", "OpenCV", "FAISS", "NLTK", "SpaCy"] },
];
---

<BaseLayout title="About" description="Learn more about me and my journey as a developer.">
  <section class="max-w-4xl mx-auto px-4 py-16">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-8">About Me</h1>

    <div class="prose prose-lg prose-gray dark:prose-invert max-w-none mb-12">
      <p>
        Hey there! I'm {siteConfig.name}, a Data Scientist with a passion for
        building AI-powered solutions that solve real-world problems.
      </p>
      <p>
        I hold a B.Tech in Computer Engineering from Charotar University of Science and Technology (2020-2024).
        My journey in tech has led me to work on exciting projects ranging from computer vision systems
        achieving 70% accuracy in metal defect detection to NLP-powered meeting analysis platforms
        that save teams 3+ hours weekly.
      </p>
      <p>
        I specialize in machine learning, natural language processing, and building enterprise-grade
        no-code ML platforms. I've collaborated with cross-functional teams of 10-15 engineers and
        delivered solutions deployed across major organizations.
      </p>
    </div>

    <!-- Skills Section -->
    <div class="mb-12">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Skills & Technologies</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {skills.map((skill) => (
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700">
            <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-3">{skill.category}</h3>
            <div class="flex flex-wrap gap-2">
              {skill.items.map((item) => (
                <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-sm rounded-full">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Resume Download -->
    <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Want to know more?</h2>
      <p class="text-gray-600 dark:text-gray-400 mb-4">
        Download my resume for a complete overview of my experience and skills.
      </p>
      <a
        href="/Pratham_Patel_Resume.pdf"
        download
        class="inline-flex items-center px-4 py-2 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Download Resume
      </a>
    </div>
  </section>
</BaseLayout>
