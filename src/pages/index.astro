---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import BlogCard from "../components/BlogCard.astro";
import { getCollection } from "astro:content";

const featuredProjects = (await getCollection("projects"))
  .filter((p) => p.data.featured && !p.data.draft)
  .slice(0, 3);

const latestPosts = (await getCollection("blog"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="max-w-6xl mx-auto px-4 py-20 md:py-32">
    <div class="max-w-3xl">
      <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
        Hi, I'm <span class="text-primary-600">Pratham</span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 mb-8 leading-relaxed">
        Developer passionate about building great software and sharing what I learn along the way.
      </p>
      <div class="flex flex-wrap gap-4">
        <a
          href="/projects"
          class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors"
        >
          View My Work
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a
          href="/contact"
          class="inline-flex items-center px-6 py-3 border-2 border-gray-300 text-gray-700 font-medium rounded-lg hover:border-gray-400 transition-colors"
        >
          Get in Touch
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  {featuredProjects.length > 0 && (
    <section class="max-w-6xl mx-auto px-4 py-16">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900">Featured Projects</h2>
        <a href="/projects" class="text-primary-600 hover:text-primary-700 font-medium">
          View all &rarr;
        </a>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {featuredProjects.map((project) => (
          <ProjectCard
            title={project.data.title}
            description={project.data.description}
            tech={project.data.tech}
            slug={project.slug}
            featured={project.data.featured}
            image={project.data.image}
          />
        ))}
      </div>
    </section>
  )}

  <!-- Latest Blog Posts -->
  {latestPosts.length > 0 && (
    <section class="max-w-6xl mx-auto px-4 py-16">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900">Latest Posts</h2>
        <a href="/blog" class="text-primary-600 hover:text-primary-700 font-medium">
          Read all &rarr;
        </a>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {latestPosts.map((post) => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            date={post.data.date}
            slug={post.slug}
            tags={post.data.tags}
          />
        ))}
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="bg-gradient-to-r from-primary-600 to-primary-700 rounded-2xl p-8 md:p-12 text-center text-white">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Let's work together</h2>
      <p class="text-primary-100 mb-6 max-w-xl mx-auto">
        I'm always open to discussing new projects, creative ideas, or opportunities to be part of your vision.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center px-6 py-3 bg-white text-primary-600 font-medium rounded-lg hover:bg-gray-100 transition-colors"
      >
        Get in Touch
      </a>
    </div>
  </section>
</BaseLayout>
