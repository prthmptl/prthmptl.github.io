---
import BaseLayout from "./BaseLayout.astro";
import { formatDate } from "../utils/formatDate";
import { readingTime } from "../utils/readingTime";
import Tag from "../components/Tag.astro";

interface Props {
  frontmatter: {
    title: string;
    description: string;
    date: Date;
    tags?: string[];
  };
  body: string;
}

const { frontmatter, body } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="max-w-3xl mx-auto px-4 py-16">
    <header class="mb-12">
      <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400 mb-4">
        <time datetime={frontmatter.date.toISOString()}>
          {formatDate(frontmatter.date)}
        </time>
        <span>&middot;</span>
        <span>{readingTime(body)} min read</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
        {frontmatter.title}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-6">{frontmatter.description}</p>
      {
        frontmatter.tags && (
          <div class="flex flex-wrap gap-2">
            {frontmatter.tags.map((tag) => (
              <Tag name={tag} />
            ))}
          </div>
        )
      }
    </header>
    <div
      class="prose prose-lg prose-gray dark:prose-invert max-w-none prose-headings:font-semibold prose-a:text-primary-600 dark:prose-a:text-primary-400 hover:prose-a:text-primary-700 prose-code:text-primary-700 dark:prose-code:text-primary-300 prose-code:bg-gray-100 dark:prose-code:bg-gray-800 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:before:content-none prose-code:after:content-none prose-pre:bg-gray-900"
    >
      <slot />
    </div>
  </article>
</BaseLayout>
